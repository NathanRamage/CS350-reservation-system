extends layout

block content
  h1 Search
  p Search for rooms

  // search form
  form.form-horizontal(method='POST', action='/search', name='searchForm')
      input(type='hidden', name='_csrf', value=_csrf)
      .form-group
        label.col-sm-3.control-label(for="NoOfPeople") Number of guests
        .col-xs-1
          input.form-control(type='number', name='NoOfPeople')
        label.col-sm-3.control-label(for="roomType") Room Type
        .col-sm-3
          select#roomType.input.form-control(form='searchForm', name='roomType')
            option(value='0') -- Select --
            option(value='1') Single
            option(value='2') Twin
            option(value='3') Family
      .form-group
        .col-sm-offset-7.col-sm-7
          button.col-sm-3.btn.btn-primary(type='submit')
            i.fa.fa-user
            | Search
